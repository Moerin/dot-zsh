# to run BASH and force it do not start zsh again
alias bash='RUN_BASH=1 /bin/bash'

# ls aliases
if [ ! $(uname) = 'Darwin' ]; then
    alias ls='ls --color'
fi

# пропускать цвет через less
alias less='less -r'

alias l='ls'
alias ll='ls -l -h'
alias la='ls -a'
alias llt='ll -t'
alias llth='ll -t | head'
alias lla='ll -a'

alias history-refresh='fc -RI'